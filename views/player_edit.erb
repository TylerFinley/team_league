<h1>Update <%=@player.name() %> </h1>

<form action="/players/<%= @player.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Remake your player:</label>
  <input id="name" name="name" type="text">
  <label for="favorite_color">Change your player's favorite color</label>
  <input id="favorite_color" name="favorite_color" type="text">


  <button type="submit">Update</button>
</form>
