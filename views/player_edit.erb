<h1>Update <%=@player.name() %> </h1>

<form action="/players/<%= @player.id() %>/" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Remake your player:</label>
  <input id="name" name="name" type="text">
  <label for="birthday">Remake your player birthday:</label>
  <input id="birthday" name="birthday" type="text">
  <label for="favorite_color">Change your player's favorite color</label>
  <input id="favorite_color" name="favorite_color" type="text">
  <select id="team" name="team_id">
    <% @teams.each do |team| %>
    <option value="<%=team.id %>"><%=team.name%></option>
    <%end%>
  </select>

  <button type="submit">Update</button>
</form>
